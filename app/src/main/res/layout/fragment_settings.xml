<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSettings"
    android:background="@color/defaultBackground">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Settings"
               android:fontFamily="@font/inter_bold"
               android:textSize="30dp"
               android:textColor="@color/defaultBlack"
               android:padding="14dp" />
       </LinearLayout>
       <com.google.android.material.divider.MaterialDivider
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:dividerColor="@color/defaultGray2"
           android:layout_marginBottom="8dp"
           />
       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_margin="8dp"

           style="@style/Widget.Material3.CardView.Elevated"
           app:cardCornerRadius="12dp"
           app:cardBackgroundColor="@color/defaultGray2">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="120dp"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:gravity="center">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Night Mode"
                       android:layout_marginStart="12dp"
                       android:fontFamily="@font/inter_regular"
                       android:textColor="@color/defaultBlack"/>

               </LinearLayout>
               <com.google.android.material.switchmaterial.SwitchMaterial
                   android:id="@+id/switch_night"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingEnd="12dp"
                   android:theme="@style/SCBSwitch"
                   android:layout_gravity="center"/>
           </LinearLayout>

       </com.google.android.material.card.MaterialCardView>

       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_margin="8dp"

           style="@style/Widget.Material3.CardView.Elevated"
           app:cardCornerRadius="12dp"
           app:cardBackgroundColor="@color/defaultGray2">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="120dp"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:gravity="center">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Focus Mode"
                       android:layout_marginStart="12dp"
                       android:fontFamily="@font/inter_regular"
                       android:textColor="@color/defaultBlack"/>

               </LinearLayout>
               <com.google.android.material.switchmaterial.SwitchMaterial
                   android:id="@+id/switch_focus"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingEnd="12dp"
                   android:theme="@style/SCBSwitch"
                   android:layout_gravity="center"/>
           </LinearLayout>

       </com.google.android.material.card.MaterialCardView>



   </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>